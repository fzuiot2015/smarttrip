<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:progress="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:id="@+id/ll_main_weather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="18dp">

            <app.dinus.com.loadingdrawable.LoadingView
                android:id="@+id/gear_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorGreen"
                progress:loading_renderer="GearLoadingRenderer" />

            <TextView
                android:id="@+id/tv_main_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_main_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_main_ar"
            android:layout_gravity="right"
            android:background="@color/colorGreen"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AR"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="visible" />

            <ImageView
                android:layout_marginTop="0.8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/saomiao"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>

