<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_mappoi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_mappoi_go"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="sdsdsdsdsdsdsdsdsdsds"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_mappoi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_mappoi_name"
        android:layout_below="@id/tv_mappoi_name"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="sdsdsdsdsdsdsdsdsdsds" />

    <ImageView
        android:id="@+id/iv_mappoi_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@mipmap/gothis" />
</RelativeLayout>