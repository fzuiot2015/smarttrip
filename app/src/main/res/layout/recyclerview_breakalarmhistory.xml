<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/colorWrite"
android:paddingBottom="15dp"
android:paddingLeft="5dp"
android:paddingRight="5dp"
android:paddingTop="15dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/iv_parking_navigation"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_breakalarm_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="地址"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_breakalarm_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="地址"
        android:textSize="15sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_breakalarm_car"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/gas_blank" />

        <TextView
            android:id="@+id/tv_breakalarm_cardes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_breakalarm_car"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_breakalarm_car"
            android:text="秒速"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_breakalarm_person"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/gas_blank" />

        <TextView
            android:id="@+id/tv_breakalarm_persondes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_breakalarm_person"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_breakalarm_person"
            android:text="秒速"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/tv_breakalarm_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="sdsds"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_breakalarm_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="秒速"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>

<View
    android:layout_width="1dp"
    android:layout_height="1dp"
    android:layout_alignParentRight="true" />
</RelativeLayout>